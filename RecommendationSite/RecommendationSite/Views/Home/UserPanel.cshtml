@{
    ViewData["Title"] = "User";
}

@model IQueryable<Review>;

<div class="row justify-content-center m-4">
    <a asp-controller="Review" asp-action="AddReview" class="btn btn-success btn-lg col-lg-3 col-md-5 col-sm-7 col-10">Add new review</a>
</div>

<div class="d-flex flex-wrap justify-content-evenly container-fluid p-4 p-sm-1 g-0">
    @foreach (var review in @Model)
    {
        <div class="d-flex flex-column justify-content-center align-content-center p-4">
            <h5 class="fw-bolder">@review.Title</h5>
            <div class="row mb-1">
                <a asp-controller="Review" asp-action="ReviewPanel" asp-route-Id="@review.Id.ToString()">
                    <img src="@review.ImageUrl" width="300" height="400" class="" alt="@review.ImageUrl"/>
                </a>
            </div>
            <div class="d-flex flex-row">
                <a asp-controller="Review" asp-action="ReviewPanel" asp-route-Id="@review.Id.ToString()" class="btn btn-outline-primary me-1 col">View</a>
                <a asp-controller="Review" asp-action="Edit" asp-route-Id="@review.Id.ToString()" class="btn btn-outline-secondary me-1 col">Edit</a>
                <a asp-controller="Review" asp-action="Delete" asp-route-Id="@review.Id.ToString()" class="btn btn-outline-danger col">Delete</a>
            </div>
        </div>
    }
</div>
