@{
    ViewData["Title"] = "AddReview";
}

@model ReviewAddModel;

<div class="container">
    <div class="col-12">
        <div class="row align-content-center justify-content-center m-auto">
            <div class="col-lg-7 col-md-10 col-sm-11 col-12 p-lg-5 p-md-5 p-sm-4 p-3 rounded shadow-lg my-5">
                <h1 class="mb-3 text-center">Add Review</h1>
                <form method="post" asp-controller="Review" asp-action="AddReview" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label" asp-for="@Model.Title">Title</label>
                        <input type="text" asp-for="@Model.Title" class="form-control"/>
                        <span asp-validation-for="@Model.Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="@Model.Name">Name</label>
                        <input type="text" asp-for="@Model.Name" class="form-control"/>
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="@Model.Group"></label>
                        <select class="form-select" asp-for="@Model.Group">
                            <option selected="">Select type of genre</option>
                            <option value="1">@Review.GroupType.Book.ToString()</option>
                            <option value="2">@Review.GroupType.Movie.ToString()</option>
                            <option value="3">@Review.GroupType.Game.ToString()</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="@Model.Mark">Mark</label>
                        <input type="number" asp-for="@Model.Mark" class="form-control"/>
                        <span asp-validation-for="@Model.Mark" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <div class="form-file">
                            <label class="form-label" asp-for="@Model.ImageUrl">Image</label>
                            <input type="file" asp-for="@Model.ImageUrl" class="form-control" accept=".jpg, .jpeg, .png">
                            <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="@Model.Text">Text</label>
                        <textarea type="text" asp-for="@Model.Text" class="form-control" rows="10"></textarea>
                        <span asp-validation-for="@Model.Text" class="text-danger"></span>
                    </div>
                    <div class="row m-auto w-50">
                        <input type="hidden" asp-for="@Model.Id" value="@Model.Id"/>
                        <input type="hidden" asp-for="@Model.UserId" value="@Model.UserId"/>
                        <input type="hidden" asp-for="@Model.IsAdd" value="1"/>
                        <button type="submit" class="btn btn-success fs-5">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
