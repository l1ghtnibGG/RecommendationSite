@{
    ViewData["Title"] = "Add";
}

@model Review;

<div class="container my-5 g-0">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-6 rounded p-5 shadow-lg">
            <h1 class="mb-3 text-center">Add Review</h1>
            <form method="post" asp-controller="Review" asp-action="AddReview">
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.Title">Title</label>
                    <input type="text" asp-for="@Model.Title" class="form-control" />
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.Name">Name</label>
                    <input type="text" asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.Group"></label>
                    <select class="form-select">
                        <option selected="">Select type of genre</option>
                        <option value="@Review.GroupType.Book">@Review.GroupType.Book.ToString()</option>
                        <option value="@Review.GroupType.Movie">@Review.GroupType.Movie.ToString()</option>
                        <option value="@Review.GroupType.Game">@Review.GroupType.Game.ToString()</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.Mark">Mark</label>
                    <input type="text" asp-for="@Model.Mark" class="form-control" />
                    <span asp-validation-for="@Model.Mark" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.ImageUrl">Image</label>
                    <input type="text" asp-for="@Model.ImageUrl" class="form-control" />
                    <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.Text">Text</label>
                    <input type="text" asp-for="@Model.Text" class="form-control"/>
                    <span asp-validation-for="@Model.Text" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success fs-5">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>