@{
    ViewData["Title"] = "User";
}

@model Review

<div class="d-flex flex-row container g-0">
    <div class="row m-auto">
        <div class="col-12 p-4">
            <div class="col-lg-5 col-md-5 col-sm-5 col-12">
                <img src="@Model.ImageUrl" width="500" height="600" class="float-start rounded mb-2 me-sm-3 img-fluid" alt="@Model.ImageUrl"/>
            </div>
            <h4>@User.Claims.Last().Value</h4>
            <div class="row-auto m-1">
                <img src="/Images/ratingStar.png" class="float-start me-1 col" alt="Star"/>
                <h3 class="col mb-0 fw-lighter">@Model.Mark/10</h3>
            </div>
            <h3 class="fw-bolder">@Model.Title</h3>
            <h5>@Model.Name</h5>
            <p>@Model.Text</p>
        </div>
    </div>
</div>

